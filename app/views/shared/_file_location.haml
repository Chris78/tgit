- l=file_location
%div{:id=>"file_location_#{l.id}"}
  = link_to_function 'Location-Details', "$(this).next('div').removeClassName('hidden');$(this).remove();"
  %br
  %div.hidden{:style=>'border:dotted 1px black; margin:3px; padding:3px;'}
    .right
      = link_to_remote('[X]', {:url=>{:controller=>'file_location', :action=>'delete', :id=>l.id}, :confirm=>'Diese File-Location wirklich lÃ¶schen?', :success=>"$('file_location_#{l.id}').remove();"}, {:class=>'red'})
    .clear
    == #{l.class.to_s} #{l.filename}
    %br
    %small
    == #{File.join(l.path,l.filename)}
    %br
    - if l.location
      == #{l.location.type} #{l.location.name} #{l.location.located}
      %br
      %small
        = l.location.description
      %br
  %img{:height=>380, :src=>"/files/get?path="+CGI.escape(Iconv.iconv('iso-8859-1','utf-8',File.join(l.path,l.filename)).first)}
